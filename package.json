{
	"name": "volpe-ls",
	"displayName": "Volpe Language Server",
	"description": "Simple language server for Volpe",
	"version": "0.0.1",
	"publisher": "Viliam Vadocz",
	"repository": "https://github.com/ViliamVadocz/vscode-volpe-ls",
	"engines": {
		"vscode": "^1.43.0"
	},
	"categories": [],
	"activationEvents": [
		"onLanguage:volpe"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Volpe Language Server",
			"properties": {
				"glspc.serverPath": {
					"scope": "window",
					"type": "string",
					"default": "",
					"description": "The file path to the Volpe language server executable."
				}
			}
		},
		"commands": [
			{
				"command": "volpe-ls.restartServer",
				"title": "Volpe Language Server: Restart server"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -watch -p ./"
	},
	"dependencies": {
		"vscode-languageclient": "^6.1.3"
	},
	"devDependencies": {
		"@types/node": "^12.12.0",
		"@types/vscode": "^1.43.0",
		"@typescript-eslint/eslint-plugin": "^3.0.2",
		"@typescript-eslint/parser": "^3.0.2",
		"eslint": "^7.1.0",
		"typescript": "^4.0.2"
	}
}
